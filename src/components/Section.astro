---
const { id, title, subtitle } = Astro.props;
---
<section id={id} class="scroll-mt-20 py-12 md:py-16">
  <div class="mb-8">
    <h2 class="text-2xl font-bold">{title}</h2>
    {subtitle && <p class="text-slate-600 dark:text-slate-400 mt-1">{subtitle}</p>}
  </div>
  <div>
    <slot />
  </div>
</section>
